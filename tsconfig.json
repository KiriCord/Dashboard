{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowJs": true,
    "module": "ES2022",
    "target": "ES2021",
    "jsx": "react",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@components/*": [
        "src/renderer/components/*"
      ],
      "@common/*": [
        "src/main/common/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@renderer/*": [
        "src/renderer/*"
      ],
      "@src/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ]
}